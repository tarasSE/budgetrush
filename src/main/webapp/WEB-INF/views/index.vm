<html>
<head>
    <title>Home</title>
    <script src="/resources/js/jquery-2.1.4.min.js"></script>
    <script src="/resources/js/jsonTools.js"></script>
    <link href="/resources/css/main.css" rel="stylesheet">
</head>
<body>
<h1>
    Hello world!
</h1>

<P> The time on the server is ${serverTime}. </P>

<div id="placeholder"></div>
<script>
    var url = 'http://localhost:8080/v1/users';


    $.getJSON(url, function (data) {
        var output = "<table class=\"simple-little-table\" cellspacing='0'>  <tr><th> ID </th><th> Name </th><th> Password <th></tr>";
        for (var i in data) {
            output +=  "<tr> <th>"     + data[i].id
                    + "</th> <th>"    + data[i].name
                    + "</th> <th>"    + data[i].password
                    + "</th></tr>";
        }

        output += "</table>";
        document.getElementById("placeholder").innerHTML = output;
    });
</script>
</body>
</html>