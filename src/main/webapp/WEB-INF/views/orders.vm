#include("WEB-INF/views/header.vm")
<div class="body">
    <div id="placeholder"></div>
    <script>
        var url = 'http://localhost:8080/v1/orders';


        $.getJSON(url, function (data) {
            var output = "<table class=\"simple-little-table\" cellspacing='0'> " +
                    " <tr>" +
                    "<th> ID </th>" +
                    "<th> Amount </th>" +
                    "<th> Date </th>" +
                    "<th> Account </th>" +
                    "<th> Contractor </th>" +
                    "<th> Category </th>" +
                    "</tr>";
            for (var i in data) {
                output += "<tr>" +
                        "<th>" + data[i].id + "</th> " +
                        "<th>" + data[i].amount + "</th> " +
                        "<th>" + data[i].date + "</th> " +
                        "<th>" + data[i].account.name + "</th> " +
                        "<th>" + data[i].contractor.name + "</th> " +
                        "<th>" + data[i].category.name + "</th>" +
                        "</tr>";
            }

            output += "</table>";
            document.getElementById("placeholder").innerHTML = output;
        });
    </script>
</div>