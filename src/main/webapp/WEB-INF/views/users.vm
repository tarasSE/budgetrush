<div class="body"></div>
<div id="placeholder"></div>
<script>
    var url = 'http://localhost:8080/v1/users';


    $.getJSON(url, function (data) {
        var output = "<table class=\"simple-little-table\" cellspacing='0'> " +
                " <tr>" +
                "<th> ID </th>" +
                "<th> Name </th>" +
                "<th> Password </th>" +
                "</tr>";
        for (var i in data) {
            output += "<tr> " +
                    "<th>" + data[i].id + "</th>" +
                    "<th>" + data[i].name + "</th> " +
                    "<th>" + data[i].password + "</th>" +
                    "</tr>";
        }

        output += "</table>";
        document.getElementById("placeholder").innerHTML = output;
    });
